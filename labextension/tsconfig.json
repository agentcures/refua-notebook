{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["dom", "es2020"],
    "module": "es2020",
    "moduleResolution": "node",
    "outDir": "lib",
    "rootDir": "src",
    "skipLibCheck": true,
    "strict": false,
    "target": "es2018"
  },
  "include": ["src/**/*"]
}
